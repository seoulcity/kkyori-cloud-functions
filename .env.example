# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=kkyori-voca
GOOGLE_CLOUD_REGION=asia-northeast3

# OpenAI Configuration (required for Whisper function)
OPENAI_API_KEY=your-openai-api-key-here

# Service Configuration
GO_RUNTIME_VERSION=go123
SERVICE_VERSION=1.0.0

# Function-specific settings
WHISPER_FUNCTION_NAME=whisper-transcribe-go
WHISPER_MEMORY=1Gi
WHISPER_TIMEOUT=300s
WHISPER_MAX_INSTANCES=10

HEALTHCHECK_FUNCTION_NAME=healthcheck-go
HEALTHCHECK_MEMORY=256Mi
HEALTHCHECK_TIMEOUT=30s
HEALTHCHECK_MAX_INSTANCES=100

# Development settings
LOCAL_TEST_PORT_WHISPER=8080
LOCAL_TEST_PORT_HEALTHCHECK=8081

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false 